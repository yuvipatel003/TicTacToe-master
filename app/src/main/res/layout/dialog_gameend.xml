<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@color/textColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="@string/str_game_result"
        android:textSize="@dimen/dimen_button_title"
        android:textStyle="bold"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:background="@color/colorLightPrimary"
        android:textColor="@color/colorPrimaryGame" />

    <TextView
        android:id="@+id/txt_GameResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_game_result"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:textColor="@color/colorPrimaryGame"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium">

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="@color/colorPrimaryGame"
            android:layout_marginRight="@dimen/margin_xxxsmall" />

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="@color/colorPrimaryGame"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            />


    </LinearLayout>

</LinearLayout>